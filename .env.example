# MongoDB 설정
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here

# 백엔드 설정
PORT=3000
NODE_ENV=production
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
FRONT_ORIGIN=https://yourdomain.com

# 프론트엔드 설정
VITE_API_URL=https://api.yourdomain.com/api

# Toss Payment (결제 시스템)
TOSS_SECRET_KEY=your_toss_secret_key
TOSS_SECURITY_KEY=your_toss_security_key

# Kakao OAuth
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_REDIRECT_URI=https://api.yourdomain.com/api/auth/kakao/callback
KAKAO_LOGIN_REDIRECT=https://yourdomain.com/auth/callback

# Naver OAuth
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
NAVER_REDIRECT_URI=https://api.yourdomain.com/api/auth/naver/callback
NAVER_LOGIN_REDIRECT=https://yourdomain.com/auth/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/auth/google/callback
GOOGLE_LOGIN_REDIRECT=https://yourdomain.com/auth/callback

# SMTP 이메일 설정
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
MAIL_FROM="호텔 예약 <your_email@gmail.com>"

# AWS S3 설정
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
REGION=ap-northeast-2
AWS_S3_BUCKET=your_s3_bucket_name

# MongoDB Atlas (클라우드)
# MONGO_URI=mongodb+srv://username:password@cluster-name.mongodb.net/?appName=hotel-project
# MONGO_DB_NAME=hotel-project
